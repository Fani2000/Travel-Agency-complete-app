extends ../layout/index
block content
    main.container.mt-5 
      .row 
        .col-md-5 
          img.img-fluid(src=`/img/destiny_${travel.image}_ln.jpg` alt=`${travel.title} Image`)
        .col-md-7
          h1 #{travel.title} 
            p 
              i.fas.fa-calendar-alt 
              |  Departure Date: #{travel.departure_date} - Return Date: #{travel.return_date}
            p 
              i.fas.fa-dollar-sign
              |  #{travel.price} 
            p 
              i.fas.fa-users
              |  #{travel.available} Available sets 
            p #{travel.description}
            a.btn.btn-success.w-100(href=`travels/${travel.id}`)  MORE INFORMTAION 